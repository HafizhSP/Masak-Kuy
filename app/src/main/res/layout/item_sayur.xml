<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#75a0ff2d">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgSayur"
                android:src="@drawable/ayam_resep" />

            <TextView
                android:id="@+id/txtNamaSayur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/imgSayur"
                android:layout_toRightOf="@+id/imgSayur"
                android:text="Sayur Mayur"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescSayur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="103dp"
                android:layout_marginLeft="103dp"
                android:layout_marginTop="57dp"
                android:layout_toEndOf="@+id/imgLauk"
                android:layout_toRightOf="@+id/imgLauk"
                android:text="Deskripsi Sayur Mayur" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>